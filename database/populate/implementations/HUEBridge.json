{
    "name": "HUE Bridge Simple",
    "shortDescription": "TD of a HUE Bridge, configured for lights and switches",
    "longDescription": "This bridge has been configured using the white light starter pack that contains 3 white lights and a switch. Any API requests associated with other devices are not included.",
    "github": "https://github.com/#2E!?O",
    "implementationType": "template",
    "topic": ["lighting", "other"],
    "platform": "other",
    "tags": ["Philips","HUE","LED"],
    "complexity": "simple",
    "td": {
        "name": "Hue Bridge",
        "id": "urn:dev:wot:com:example:servient:huelamp",
        "@context": [
            "http://www.w3.org/ns/td",
            {
                "http": "http://www.w3.org/2011/http#"
            },
            {
                "htv": "http://www.w3.org/2011/http#"
            }
        ],
        "securityDefinitions": {
            "nosec_sc": {
                "scheme": "nosec"
            }
        },
        "security": [
            "nosec_sc"
        ],
        "properties": {
            "configuration": {
                "title": "Configuration Settings",
                "description": "Returns list of all configuration elements in the bridge. Note all times are stored in UTC.",
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Name of the bridge. This is also its uPnP name, so will reflect the actual uPnP name after any conflicts have been resolved.",
                        "type": "string",
                        "minLength": 4,
                        "maxLength": 16,
                        "readOnly": false,
                        "writeOnly": false
                    },
                    "whitelist": {
                        "type": "object",
                        "description": "A list of whitelisted user IDs.",
                        "readOnly": false,
                        "writeOnly": false
                    },
                    "apiversion": {
                        "type": "object",
                        "description": "The version of the hue API in the format <major>.<minor>.<patch>, for example 1.2.1",
                        "readOnly": true,
                        "writeOnly": false
                    },
                    "ipadress": {
                        "type": "string",
                        "description": "IP address of the bridge.",
                        "readOnly": false,
                        "writeOnly": false
                    },
                    "macadress": {
                        "type": "string",
                        "description": "MAC address of the bridge.",
                        "readOnly": true,
                        "writeOnly": false
                    },
                    "netmask": {
                        "type": "string",
                        "description": "Netmask of the bridge.",
                        "readOnly": false,
                        "writeOnly": false
                    },
                    "dhcp": {
                        "type": "boolean",
                        "description": "Whether the IP address of the bridge is obtained with DHCP.",
                        "readOnly": false,
                        "writeOnly": false
                    },
                    "UTC": {
                        "type": "string",
                        "description": "Current time stored on the bridge.",
                        "readOnly": false,
                        "writeOnly": false
                    },
                    "modelid": {
                        "description": "This parameter uniquely identifies the hardware model of the bridge (BSB001, BSB002).",
                        "type": "string",
                        "minLength": 6,
                        "maxLength": 32,
                        "readOnly": true,
                        "writeOnly": false
                    },
                    "brigdeid": {
                        "description": "The unique bridge id. This is currently generated from the bridge Ethernet mac address.",
                        "type": "string",
                        "minLength": 6,
                        "maxLength": 32,
                        "readOnly": true,
                        "writeOnly": false
                    }
                },
                "forms": [{
                    "href": "http://192.168.0.111/api/R6D7CYQFzXckikMPLEL8WbSZWg9XKkEyx-NrgKws/config",
                    "contentType": "application/json",
                    "http:methodName": "GET",
                    "op": [
                        "readproperty"
                    ]
                }],
                "readOnly": true
            },
            "all_lights": {
                "title": "Lights",
                "description": "Gets a detailed list of all lights that have been discovered by the bridge.",
                "type": "object",
                "properties": {},
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "state": {
                            "description": "Details the state of the light, see the state table below for more details.",
                            "type": "object",
                            "properties": {
                                "on": {
                                    "description": "On/Off state of the light. On=true, Off=false",
                                    "type": "boolean",
                                    "readOnly": false,
                                    "writeOnly": false
                                },
                                "alert": {
                                    "description": "The alert effect, which is a temporary change to the bulbâ€™s state.'l' of lselect stands for loop.",
                                    "type": "string",
                                    "enum": [
                                        "none",
                                        "select",
                                        "lselect"
                                    ],
                                    "readOnly": false,
                                    "writeOnly": false
                                },
                                "bri": {
                                    "description": "brightness level",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 254,
                                    "readOnly": false,
                                    "writeOnly": false
                                },
                                "reachable": {
                                    "description": "Indicates if a light can be reached by the bridge",
                                    "type": "boolean",
                                    "readOnly": true,
                                    "writeOnly": false
                                }
                            }
                        },
                        "type": {
                            "description": "A fixed name describing the type of light",
                            "type": "string",
                            "readOnly": true,
                            "writeOnly": false
                        },
                        "name": {
                            "description": "A unique, editable name given to the light",
                            "type": "string",
                            "readOnly": false,
                            "writeOnly": false
                        },
                        "modelid": {
                            "description": "The hardware model of the light.",
                            "type": "string",
                            "readOnly": true,
                            "writeOnly": false
                        },
                        "swversion": {
                            "description": "An identifier for the software version running on the light",
                            "type": "string",
                            "readOnly": true,
                            "writeOnly": false
                        }
                    }
                },
                "forms": [{
                    "href": "http://192.168.0.111/api/R6D7CYQFzXckikMPLEL8WbSZWg9XKkEyx-NrgKws/lights",
                    "contentType": "application/json",
                    "htv:methodName": "GET",
                    "op": [
                        "readproperty"
                    ]
                }],
                "readOnly": true
            }
        },
        "actions": {
            "search_lights": {
                "title": "Search for New Lights",
                "description": "Starts searching for new lights.",
                "input": {
                    "type": "object",
                    "properties": {
                        "deviceid": {
                            "type": "array",
                            "maxItems": 10,
                            "writeOnly": true
                        }
                    }
                },
                "output": {
                    "type": "object",
                    "properties": {
                        "success": {
                            "type": "object",
                            "writeOnly": false,
                            "readOnly": true
                        }
                    }
                },
                "forms": [{
                    "href": "http://192.168.0.111/api/R6D7CYQFzXckikMPLEL8WbSZWg9XKkEyx-NrgKws/lights",
                    "contentType": "application/json",
                    "htv:methodName": "POST",
                    "op": [
                        "invokeaction"
                    ]
                }],
                "idempotent": true,
                "safe": false
            },
            "delete_light1": {
                "***IMPORTANT_NOTE***": "DONT USE IT WITHOUT CAUTION",
                "description": "Deletes a light from the bridge.",
                "forms": [{
                    "href": "http://192.168.0.111/api/R6D7CYQFzXckikMPLEL8WbSZWg9XKkEyx-NrgKws/lights/1",
                    "contentType": "application/json",
                    "htv:methodName": "DELETE"
                }],
                "safe": false,
                "idempotent": false
            },
            "delete_light3": {
                "***IMPORTANT_NOTE***": "DONT USE IT WITHOUT CAUTION",
                "description": "Deletes a light from the bridge.",
                "forms": [{
                    "href": "http://192.168.0.111/api/R6D7CYQFzXckikMPLEL8WbSZWg9XKkEyx-NrgKws/lights/3",
                    "contentType": "application/json",
                    "htv:methodName": "DELETE"
                }],
                "safe": false,
                "idempotent": false
            },
            "delete_light4": {
                "***IMPORTANT_NOTE***": "DONT USE IT WITHOUT CAUTION",
                "description": "Deletes a light from the bridge.",
                "forms": [{
                    "href": "http://192.168.0.111/api/R6D7CYQFzXckikMPLEL8WbSZWg9XKkEyx-NrgKws/lights/4",
                    "contentType": "application/json",
                    "htv:methodName": "DELETE"
                }],
                "safe": false,
                "idempotent": false
            }
        }
    }
}