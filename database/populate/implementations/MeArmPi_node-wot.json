{
    "name": "MeArm Pi node-wot",
    "shortDescription": "WoTifies your MeArm and exposes its basic movements through node-wot",
    "longDescription":"# MeArmPi    ##    Requirements        -        NodeJS 8 or newer -        You have to enable SPI on the board.    ## Installation        -        get the latest node:        ``    `bashcurl -sL https://deb.nodesource.com/setup_8.x | sudo -E bash -sudo apt-get install -y nodejs`    `` -    `cd`    inside the wot - mearmpi folder and run: `npm install` -        Build: `npm run build` -        To run the program: `node index.js` -        Make sure that this script runs automatically on startup.Crontab can do this on Linux. -            The server runs on port 8080 ",
    "github": "https://github.com/tum-ei-esi/wot-sys",
    "implementationType": "code",
    "topic": ["actuator", "robotics"],
    "platform": "raspberry",
    "tags": ["robot","node-wot"],
    "complexity": "medium",
    "td": {
        "@context": "http://www.w3.org/ns/td",
        "@type": "Thing",
        "name": "MeArmPi",
        "description": "MeArm Pi Robotic Arm",
        "security": [{
            "scheme": "nosec"
        }],
        "properties": {
            "gripState": {
                "type": "string",
                "readOnly": true,
                "description": "Is the robots grip open or closed?",
                "enum": ["open", "closed", "between"],
                "writeOnly": false,
                "observable": false,
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/properties/gripState",
                    "contentType": "application/json",
                    "op": ["readproperty"]
                }]
            },
            "motorPositions": {
                "type": "object",
                "readOnly": true,
                "description": "The current positions of all 4 motors.",
                "properties": {
                    "base": {
                        "type": "integer"
                    },
                    "upper": {
                        "type": "integer"
                    },
                    "lower": {
                        "type": "integer"
                    },
                    "grip": {
                        "type": "integer"
                    }
                },
                "writeOnly": false,
                "observable": false,
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/properties/motorPositions",
                    "contentType": "application/json",
                    "op": ["readproperty"]
                }]
            }
        },
        "actions": {
            "openGrip": {
                "description": "Open the robot's Grip.",
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/openGrip",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            },
            "closeGrip": {
                "description": "Close the robot's Grip.",
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/closeGrip",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            },
            "moveGripTo": {
                "description": "Move the grip's to a given angle.",
                "input": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 90
                },
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/moveGripTo",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            },
            "moveUpperTo": {
                "description": "Move the upper part of the arm to a given angle.",
                "input": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 135
                },
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/moveUpperTo",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            },
            "moveLowerTo": {
                "description": "Move the lower part of the arm to a given angle.",
                "input": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 135
                },
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/moveLowerTo",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            },
            "moveBaseTo": {
                "description": "Move the base of the arm to a given angle.",
                "input": {
                    "type": "integer",
                    "minimum": -90,
                    "maximum": 90
                },
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/moveBaseTo",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            },
            "dance": {
                "forms": [{
                    "href": "http://192.168.0.104:8080/MeArmPi/actions/dance",
                    "contentType": "application/json",
                    "op": ["invokeaction"]
                }],
                "idempotent": false,
                "safe": false
            }
        },
        "id": "de:tum:ei:esi:mearmpi:192.168.0.104",
        "forms": [{
            "href": "http://192.168.0.104:8080/MeArmPi/all/properties",
            "contentType": "application/json"
        }]
    }
}